<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All restaurants</h1>
      <ul class="list-group mb-3 fs-2">
        <% @restaurants.each do |restaurant| %>
          <li class="list-group-item">
            <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none" %>
          </li>
            <%= link_to "Add a Review", new_restaurant_review_path(restaurant), class: 'btn btn-primary mb-5' %>
        <% end %>
      </ul>
      <%= link_to "Add a new Restaurant", new_restaurant_path, class: 'btn btn-primary mb-5' %>
    </div>
  </div>
</div>
