<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1 class="text-center"><%= @restaurant.name %></h1>
        <ul class="list-group mb-3">
          <li class="list-group-item">
            <%= @restaurant.address %>
          </li>
          <li class="list-group-item">Phone number ->
            <%= @restaurant.phone_number %>
          </li>
          <li class="list-group-item">Category -> <%= @restaurant.category %></li>
        </ul>
        <p><strong>Reviews</strong></p>
        <ul class="list-group">
          <% @restaurant.reviews.each do |review| %>
            <li class="list-group-item">Rating -> <%= review.rating %>‚≠ê</li>
            <li class="list-group-item"><%= review.content %></li>
          <% end %>
        </ul>

    <button type="button" class="btn btn-outline-primary mt-4"><%= link_to  "Back to all Restaurants",  restaurants_path, class: "text-decoration-none text-dark" %></button>
  </div>
</div>
